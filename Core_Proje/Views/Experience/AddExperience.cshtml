
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Ekleme Paneli</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Deneyim Adı</label>
                        <input type="text" class="form-control" name="Name" placeholder="Örn. Web Yazılım">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Teknoloji</label>
                        <input type="text" class="form-control" name="Date" placeholder="Örn. WordPress">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Fotoğraf Yolu</label>
                        <input type="text" class="form-control" name="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea class="form-control" name="Description" placeholder="Deneyiminiz hakkında kısa bir açıklama giriniz..."  rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                </form>
            </div>
        </div>
    </div>
