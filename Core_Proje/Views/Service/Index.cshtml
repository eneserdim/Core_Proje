@using EntityLayer.Concrete
@model List<Service> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="status"><h5 style="color:white">#</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Hizmet</h5></th>
                            <th scope="col"><h5 style="color:white">Düzenle</h5></th>
                            <th scope="col"><h5 style="color:white">Sil</h5></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.ServiceID
                            </td>
                            <td class="budget">
                                @item.Title
                            </td>
                            <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-info">Düzenle</a></td>
                            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Service/AddService/" class="btn btn-primary">Yeni Hizmet Ekle</a>
                <br />
            </div>
        </div>
    </div>
</div>


