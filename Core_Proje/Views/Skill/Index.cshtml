@using EntityLayer.Concrete
@model List<Skill> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Listesi Paneli</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name"><h4 style="color:white">#</h4></th>
                            <th scope="col" class="sort" data-sort="budget"><h4 style="color:white">Başlık</h4></th>
                            <th scope="col" class="sort" data-sort="status"><h4 style="color:white">Oran</h4></th>
                            <th scope="col" class="sort" data-sort="completion"><h4 style="color:white">Düzenle</h4></th>
                            <th scope="col"><h4 style="color:white">Sil</h4></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SkillID</td>
                                <td>@item.Title</td>
                                <td>
                                    <span class="completion mr-2">@item.Value%</span>
                                    <div class="progress">

                                        <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-info">Düzenle</a></td>
                                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a href="/Skill/AddSkill/" class="btn btn-primary">Yeni Yetenek Ekle</a>
            </div>
        </div>
    </div>
</div>


