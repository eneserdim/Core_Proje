@using EntityLayer.Concrete
@model List<Customers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cariler Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="status"><h5 style="color:white">#</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Ad Soyad</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Telefon</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Verilen Hizmet</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Anlaşılan Ücret</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Maliyet</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Kâr</h5></th>
                            <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Tarih</h5></th>
                            <th scope="col"><h5 style="color:white">Düzenle</h5></th>
                            <th scope="col"><h5 style="color:white">Sil</h5></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CariID
                                </td>
                                <td class="budget">
                                    @item.AdSoyad
                                </td>
                                <td class="budget">
                                    @item.Telefon
                                </td>
                                <td class="budget">
                                    @item.VerilenHizmet
                                </td>
                                <td class="budget">
                                    @item.AnlaşılanÜcret
                                </td>
                                <td class="budget">
                                    @item.Maliyet
                                </td>
                                <td class="budget">
                                    @ViewBag.kar
                                </td>
                                <td class="budget">
                                    @item.Tarih
                                </td>
                                <td><a href="/Customer/EditCustomer/@item.CariID" class="btn btn-info">Düzenle</a></td>
                                <td><a href="/Customer/DeleteCustomer/@item.CariID" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Customer/AddCustomer/" class="btn btn-primary">Yeni Cari Ekle</a>
                <br />
            </div>
        </div>
    </div>
</div>

