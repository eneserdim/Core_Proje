@model EntityLayer.Concrete.Customers

@{
    ViewData["Title"] = "EditCustomer";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post))
{
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Cari Güncelleme Paneli</h4>
                <form class="forms-sample" method="post">
                    @Html.HiddenFor(x => x.CariID)
                    <div class="form-group">
                        <label for="exampleInputUsername1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Telefon Numarası</label>
                        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Verilene Hizmet</label>
                        @Html.TextBoxFor(x => x.VerilenHizmet, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Anlaşılan Ücret</label>
                        @Html.TextBoxFor(x => x.AnlaşılanÜcret, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Hizmet Maliyeti</label>
                        @Html.TextBoxFor(x => x.VerilenHizmet, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Açıklama, 6, 4, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}


