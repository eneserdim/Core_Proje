@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Güncelleme Paneli</h4>
                <form class="forms-sample" method="post">
                    @Html.HiddenFor(x => x.PortfolioID)
                    @if (Model != null)
                    {
                        <input type="hidden" name="Status" value="true">
                    }
                    <div class="form-group">
                        <label for="exampleInputUsername1">Deneyim Adı</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Proje Görsel 1");
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Proje Görsel 2");
                        @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Proje Görsel 2");
                        @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Proje Url");
                        @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Platform");
                        @Html.TextBoxFor(x => x.Platform, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Platform Görseli");
                        @Html.TextBoxFor(x => x.PlatformUrl, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}


