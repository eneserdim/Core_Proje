@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="sort" data-sort="budget"><h5 style="color:white">Proje</h5></th>
                                <th scope="col" class="sort" data-sort="status"><h5 style="color:white">Platform</h5></th>
                                <th scope="col"><h5 style="color:white">Durum</h5></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="@Url.Content(item.PlatformUrl)" alt="image">
                                    <span class="pl-2">@item.Name</span>
                                </td>
                                <td class="budget">
                                    @item.Platform
                                </td>
                                <td class="text-success">Tamamlandı<i class="mdi mdi-arrow"></i></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-info">Düzenle</a></td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-danger">Sil</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">Yeni Proje Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>




